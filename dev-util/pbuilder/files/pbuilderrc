# this is your configuration file for pbuilder.
# the file in /usr/share/pbuilder/pbuilderrc is the default template.
# /etc/pbuilderrc is the one meant for overwriting defaults in
# the default template
#
# read pbuilderrc.5 document for notes on specific options.

RepoURL="127.0.0.1"

MIRRORSITE=ftp://${RepoURL}/smolensk-1.4-install

COMPONENTS="main contrib non-free"

DISTRIBUTION=smolensk

OTHERMIRROR="
deb ftp://${RepoURL}/smolensk-1.4-devel smolensk contrib main non-free|
deb ftp://${RepoURL}/vega astra14 main contrib non-free vega|
deb ftp://${RepoURL}/vega astra14_dutils main contrib non-free vega
"

BINDMOUNTS="/var/cache/pbuilder/tmprepo/"

DEBOOTSTRAPOPTS=(
    '--components=main,contrib,non-free'
    '--variant=minbase'
    '--no-check-gpg'
    )

APTITUDEGETOPT=(
    '-y'
    )
APTGETOPT=(
    '-y'
    )
ALLOWUNTRUSTED=yes

AUTO_DEBSIGN=${AUTO_DEBSIGN: -no}

HOOKDIR=/var/cache/pbuilder/hooks

PKGNAME_LOGFILE=yes
PKGNAME_LOGFILE_EXTENSION=_$(dpkg --print-architecture).build

#pdbuild

USE_PDEBUILD_INTERNAL=yes
