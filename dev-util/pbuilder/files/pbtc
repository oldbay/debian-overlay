#/bin/bash

. /etc/pb.cfg

if [ ! -f $tgz_name ];then
    echo "Please rum \"pdinit\" from current directory"
    exit 1
fi

#test teamcity build directory and chmod content
echo $PBROOT|grep ${tc_root_dir} >/dev/null 2>&1
if [ $? -eq 0 ];then
    echo "USE:\"${PBROOT}\" directory from Teamcity build agent"
else
    echo "ERROR:\"${PBROOT}\" build directory is not Teamcity directory in \"${tc_root_dir}\""
    exit 1
fi

#create script
mkdir -p /tmp/pb
sname=/tmp/pb/$(basename $tgz_name)_$(date +%s).sh
echo "echo ----------------------">${sname}
echo "cd $PBROOT">>${sname}
echo "$@">>${sname}
echo "echo ----------------------">>${sname}

sudo env PBROOT=$PBROOT /usr/sbin/pbuilder execute --basetgz $tgz_name --bindmounts $PBROOT -- ${sname} 

#finalisy
rm ${sname}
sudo env HOME=/root chown --reference=$PBROOT -R $PBROOT
